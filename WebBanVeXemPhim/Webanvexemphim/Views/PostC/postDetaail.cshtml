@model Webanvexemphim.Models.post
@{
    ViewBag.Title = "postDetaail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Action("_Header", "Modules")
<div class="container">
    <div class="pt-5">
        <div class="section-pannel ">
            <div class="grid row">
                <div class="col-md-10">
                    <form autocomplete="off">
                        <div class="row form-grid">
                            <div class="col-sm-12">

                                <p >  Trang Chủ / Chi tiết bài viết / <span class="text-danger"> @Model.title </span> </p>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <div class="sidebar-container ">
        <div class="content">
            <section class="section-long section-spaced">
                <div class="section-line">
                    <article class="article-tape-entity">

                        <div class="entity-content">
                            <h2 class="entity-title">@Model.title</h2>
                            <div class="entity-category">
                                <a class="content-link" href="news-blocks-sidebar-right.html">comedy</a>,
                                <a class="content-link" href="news-blocks-sidebar-right.html">detective</a>,
                                <a class="content-link" href="news-blocks-sidebar-right.html">sci-fi</a>
                            </div>
                        </div>
                    </article>
                    <div class="section-description">
                        <p>@Html.Raw(Model.detail)</p>
                    </div>

                </div>

                <div class="section-line">
                    <div class="section-head">
                       
                    </div>
                    <form autocomplete="off">
                        <div class="row form-grid">
                            <div class="col-12 col-sm-6">
                                <div class="input-view-flat input-group">
                                    <input class="form-control" name="name" type="text" placeholder="Tên" />
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="input-view-flat input-group">
                                    <input class="form-control" name="email" type="email" placeholder="Email" />
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="input-view-flat input-group">
                                    <textarea class="form-control" name="review" placeholder="Review của bạn"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="rating-line">
                                    <label>Xếp hạng:</label>
                                    <div class="form-rating" name="rating">
                                        <input type="radio" id="rating-10" name="rating" value="10" />
                                        <label for="rating-10">
                                            <span class="rating-active-icon"><i class="fas fa-star"></i></span>
                                            <span class="rating-icon"><i class="far fa-star"></i></span>
                                        </label>
                                        <input type="radio" id="rating-9" name="rating" value="9" />
                                        <label for="rating-9">
                                            <span class="rating-active-icon"><i class="fas fa-star"></i></span>
                                            <span class="rating-icon"><i class="far fa-star"></i></span>
                                        </label>
                                        <input type="radio" id="rating-8" name="rating" value="8" />
                                        <label for="rating-8">
                                            <span class="rating-active-icon"><i class="fas fa-star"></i></span>
                                            <span class="rating-icon"><i class="far fa-star"></i></span>
                                        </label>
                                        <input type="radio" id="rating-7" name="rating" value="7" />
                                        <label for="rating-7">
                                            <span class="rating-active-icon"><i class="fas fa-star"></i></span>
                                            <span class="rating-icon"><i class="far fa-star"></i></span>
                                        </label>
                                        <input type="radio" id="rating-6" name="rating" value="6" />
                                        <label for="rating-6">
                                            <span class="rating-active-icon"><i class="fas fa-star"></i></span>
                                            <span class="rating-icon"><i class="far fa-star"></i></span>
                                        </label>
                                        <input type="radio" id="rating-5" name="rating" value="5" />
                                        <label for="rating-5">
                                            <span class="rating-active-icon"><i class="fas fa-star"></i></span>
                                            <span class="rating-icon"><i class="far fa-star"></i></span>
                                        </label>
                                        <input type="radio" id="rating-4" name="rating" value="4" />
                                        <label for="rating-4">
                                            <span class="rating-active-icon"><i class="fas fa-star"></i></span>
                                            <span class="rating-icon"><i class="far fa-star"></i></span>
                                        </label>
                                        <input type="radio" id="rating-3" name="rating" value="3" />
                                        <label for="rating-3">
                                            <span class="rating-active-icon"><i class="fas fa-star"></i></span>
                                            <span class="rating-icon"><i class="far fa-star"></i></span>
                                        </label>
                                        <input type="radio" id="rating-2" name="rating" value="2" />
                                        <label for="rating-2">
                                            <span class="rating-active-icon"><i class="fas fa-star"></i></span>
                                            <span class="rating-icon"><i class="far fa-star"></i></span>
                                        </label>
                                        <input type="radio" id="rating-1" name="rating" value="1" />
                                        <label for="rating-1">
                                            <span class="rating-active-icon"><i class="fas fa-star"></i></span>
                                            <span class="rating-icon"><i class="far fa-star"></i></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="px-5 btn btn-theme" type="submit">Gửi đi</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
        <div class="sidebar section-long order-lg-last">
            <section class="section-sidebar">
                <div class="section-head">
                    @*<h2 class="section-title text-uppercase">Các bài viết review</h2>*@
                </div>
                @Html.Action("_postSugger", "PostC")

            </section>
            <section class="section-sidebar">
                <div class="section-head">
                    @*<h2 class="section-title text-uppercase">Phim trong tháng</h2>*@
                </div>
                @*<ul class="list-unstyled list-wider list-categories">
                    <li>
                        <a class="content-link text-uppercase" href="#">tháng 8 2020</a>
                    </li>
                    <li>
                        <a class="content-link text-uppercase" href="#">tháng 9 2020</a>
                    </li>
                    <li>
                        <a class="content-link text-uppercase" href="#">tháng 10 2020</a>
                    </li>
                    <li>
                        <a class="content-link text-uppercase" href="#">tháng 11 2020</a>
                    </li>
                </ul>*@
            </section>

        </div>
    </div>
</div>
@Html.Action("_footer", "Modules")
